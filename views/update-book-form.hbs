{{#extends 'base'}}
{{#block 'content'}}

    <h1>Update Book</h1>

    <form method="post">
        <div>
            <label>Title :</label>
            <input type="text" name="title" id="title" class="form-control" value="{{title}}">
        </div>

        <div>
            <label>ISBN :</label>
            <input type="text" name="isbn" id="isbn" class="form-control" value="{{isbn}}">
        </div>

        <input type="submit" value="Submit" class="btn btn-primary mt-5">
    </form>

{{/block}}
{{/extends}}