{{#extends 'base'}}
{{#block 'content'}}

    <h1>All Books</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>ISBN</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each books}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.isbn}}</td>
                    <td>
                        <a href="/update-book/{{this.id}}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{/block}}
{{/extends}}